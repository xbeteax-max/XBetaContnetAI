name: My First Action
on: [push] # This tells it to run every time you push code

jobs:
  say-hello:
    runs-on: ubuntu-latest # The type of virtual machine the robot uses
    steps:
      - name: Checkout code
        uses: actions/checkout@v4 # This lets the robot "see" your code

      - name: Run a greeting
        run: echo "Successfully triggered from Google AI Studio!"
